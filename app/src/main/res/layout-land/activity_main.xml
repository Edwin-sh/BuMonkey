<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#92D4D4"
        android:elevation="20dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="@string/app_name"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="172dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                app:srcCompat="@drawable/bumonkey_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="432dp"
            android:layout_height="202dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/text_hello"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewmessage"
                android:layout_width="362dp"
                android:layout_height="100dp"
                android:text="@string/text_mess" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/buttonlogin3"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#92D4D4"
            android:onClick="login"
            android:text="@string/buttonlogin3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonregistre2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#92D4D4"
            android:onClick="register"
            android:text="@string/buttonregistre2"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>