<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/empleo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewempleo"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/programador"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/job"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="$"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ventas"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewventas"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ventas" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/sales"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="$"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/regalo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewregalo"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/giftbox" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/gift"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="$"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

</LinearLayout>